{
  "require": {
    "php": ">=7.4",
    "fzaninotto/faker": "^1.9",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php tests",
    "example": "php example/example.php",
    "cs": "./vendor/bin/phpcs ./src --standard=PSR12",
    "cs:autofix": "./vendor/bin/phpcbf ./src --standard=PSR12"
  }
}
